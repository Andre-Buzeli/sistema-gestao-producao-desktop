        });

        autoUpdater.on('download-progress', (progressObj) => {
            const msg = `Baixando ${Math.round(progressObj.percent)}%`;
            console.log('ğŸ“¥', msg);
            this.notifyRenderer('updater:progress', progressObj);
        });

        autoUpdater.on('update-downloaded', () => {
