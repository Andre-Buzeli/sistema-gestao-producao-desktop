            console.error('âŒ Erro ao verificar atualizaÃ§Ãµes:', error);
            throw error;
        }
    }

    async downloadUpdate() {
        try {
            return await autoUpdater.downloadUpdate();
        } catch (error) {
            console.error('âŒ Erro ao baixar atualizaÃ§Ã£o:', error);
            throw error;
        }
    }

    installUpdate() {
        autoUpdater.quitAndInstall();
