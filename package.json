{
  "name": "sistema-gestao-producao-desktop",
  "version": "1.3.0",
  "description": "Sistema Desktop de Gestão de Produção",
  "main": "main.js",
  "homepage": "https://github.com/Andre-Buzeli/sistema-gestao-producao-desktop",
  "repository": {
    "type": "git",
    "url": "https://github.com/Andre-Buzeli/sistema-gestao-producao-desktop.git"
  },
  "dependencies": {
    "cookie": "^0.7.2",
    "cookie-parser": "^1.4.7",
    "electron-log": "^5.4.1",
    "electron-updater": "^6.6.2",
    "express": "^4.18.2",
    "localtunnel": "^2.0.2",
    "portfinder": "^1.0.37",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-portable": "electron-builder --win portable",
    "build-installer": "electron-builder --win nsis",
    "dist": "npm run build-win",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "publish": "electron-builder --publish=always",
    "release": "npm run build && npm run publish",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.gestao.producao.desktop",
    "productName": "Sistema de Gestão de Produção",
    "copyright": "Copyright © 2025 Sistema de Gestão",
    "publish": [
      {
        "provider": "github",
        "owner": "Andre-Buzeli",
        "repo": "sistema-gestao-producao-desktop"
      }
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "frontend/**/*",
      "backend/**/*",
      "database/**/*",
      "!**/*.map",
      "!**/node_modules/.cache",
      "!**/node_modules/electron/**",
      "!**/node_modules/@electron/**"
    ],
    "extraResources": [
      {
        "from": "database/",
        "to": "database/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "forceCodeSigning": false,
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "displayLanguageSelector": true,
      "perMachine": false,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false,
      "warningsAsErrors": false,
      "artifactName": "sistema-gestao-producao-desktop-setup-${version}.exe"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  },
  "keywords": [
    "gestao",
    "producao",
    "desktop",
    "electron"
  ],
  "author": "Sistema de Gestão",
  "license": "MIT"
}
